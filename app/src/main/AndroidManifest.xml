<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.net.serbis.dbmanager" >

    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name">
        
        <activity
            android:name=".Main"
            android:label="@string/app_name">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
        </activity>
        
        <activity
            android:name=".db.DataBases"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".folder.Folders"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".db.Tables"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".query.Queries"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".query.Edit"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".table.Table"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"/>
        
        <activity
            android:name=".widget.Config">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>

        </activity>
        
        <receiver
            android:name=".widget.Widget"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget"/>

        </receiver>
        
        <service
            android:name=".widget.Service"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        
    </application>

</manifest>
